{
  "manifest_version": 3,
  "name": "Chat Scraper",
  "version": "4.0",
  "description": "Select, prepare, and download chat conversations from any platform.",
  "permissions": [
    "scripting",
    "storage",
    "downloads",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "overlay.css",
        "selector_styles.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}